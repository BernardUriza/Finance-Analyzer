<div id="financial_profile_liabilities" data-prototype="{{ form_widget(form.liabilities.vars.prototype)|e('html_attr') }}">
    {% for liability in form.liabilities %}
        <div class="collection-item border rounded p-3 mb-3 position-relative">
            <div class="row g-2">
                <div class="col-md-2">{{ form_widget(liability.type) }}</div>
                <div class="col-md-3">{{ form_widget(liability.label, {'attr': {'placeholder': 'Descripción'}}) }}</div>
                <div class="col-md-3">{{ form_widget(liability.balance) }}</div>
                <div class="col-md-2">{{ form_widget(liability.interest_rate, {'attr': {'placeholder': 'Tasa %'}}) }}</div>
                <div class="col-md-2">{{ form_widget(liability.monthly_payment) }}</div>
            </div>
            <button type="button" class="btn btn-sm btn-outline-danger remove-item position-absolute top-0 end-0 m-2">✕</button>
        </div>
    {% endfor %}
</div>
{% if form.liabilities|length == 0 %}
    <p class="text-muted" id="li-empty-msg">Sin deudas. ¡Libre de deudas!</p>
{% endif %}
